<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trustedshops.trustbadgeexample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CheckoutPageActivity"
            android:parentActivityName="com.trustedshops.trustbadgeexample.MainActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.trustedshops.trustbadgeexample.MainActivity" />
        </activity>
        <activity
            android:name=".ProductReviewsActivity"
            android:label="@string/title_activity_product_reviews"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>